<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_week"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_recent_history"
        android:textSize="@dimen/title_character_size"
        android:id="@+id/dialog_edit_time_text"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="@dimen/dialog_edit_length"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edit_future_time"
            android:textSize="@dimen/title_character_size"
            android:gravity="center"
            android:autofillHints="0"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_character_size"
            android:id="@+id/dialog_edit_future_time_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edit_future_time_select"
            android:textSize="@dimen/title_character_size"
            android:text="@string/select"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="@dimen/dialog_edit_length"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edit_past_time"
            android:textSize="@dimen/title_character_size"
            android:gravity="center"
            android:autofillHints="0"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_character_size"
            android:id="@+id/dialog_edit_past_time_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edit_past_time_select"
            android:textSize="@dimen/title_character_size"
            android:text="@string/select"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>
